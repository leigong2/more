<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="oval">
            <size android:width="40dp"
                  android:height="40dp"/>
            <stroke android:width="1dp"
                    android:color="@color/sign"/>
        </shape>
    </item>
    <item android:gravity="center">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <solid android:color="@color/sign"/>
            <size
                android:width="38dp"
                android:height="38dp"/>
            <stroke
                android:width="4dp"
                android:color="@color/abc_white"
                />
        </shape>
    </item>
</layer-list>