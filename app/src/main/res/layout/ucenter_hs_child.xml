<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ucenter_view1"
        android:layout_width="1000dp"
        android:layout_height="8dp"
        android:layout_above="@+id/ucenter_view2"
        android:alpha="0.15"
        android:background="#FFCC00"
        android:orientation="horizontal" />

    <LinearLayout
        android:id="@+id/ucenter_view2"
        android:layout_width="1000dp"
        android:layout_height="8dp"
        android:layout_above="@+id/ucenter_progress_layout"
        android:alpha="0.3"
        android:background="#FFCC00"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_above="@+id/ucenter_progress_bottom"
        android:id="@+id/ucenter_progress_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ProgressBar
            android:id="@+id/ucenter_normal_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="285dp"
            android:layout_height="4dp"
            android:progressDrawable="@drawable/ucenter_progressbar" />

        <ProgressBar
            android:id="@+id/ucenter_orange_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="285dp"
            android:layout_height="4dp"
            android:progressDrawable="@drawable/ucenter_progressbar" />

        <ProgressBar
            android:id="@+id/ucenter_black_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="430dp"
            android:layout_height="4dp"
            android:progressDrawable="@drawable/ucenter_progressbar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ucenter_progress_bottom"
        android:layout_width="1000dp"
        android:layout_height="8dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:visibility="gone"
        android:id="@+id/ucenter_normal_point"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="30dp"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ucenter_orange_ball" />

    <ImageView
        android:id="@+id/ucenter_point_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ucenter_point_line" />

    <LinearLayout
        android:id="@+id/ucenter_day_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/ucenter_point_line"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ucenter_reg_day"
            android:layout_width="wrap_content"
            android:textColor="@color/orange"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天，"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/ucenter_user_mileage"
            android:textColor="@color/orange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="里程"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ucenter_card_discount_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ucenter_day_layout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@id/ucenter_point_line"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ucenter_discount_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ucenter_triangle" />
    </LinearLayout>

    <TextView
        android:id="@+id/ucenter_normal_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:layout_toRightOf="@id/ucenter_point_line"
        android:text="普通会员"
        android:textColor="#FFCC00"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/ucenter_orange_lock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="282dp"
        android:src="@drawable/ucenter_lock" />

    <TextView
        android:id="@+id/ucenter_orange_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/ucenter_orange_lock"
        android:text="橙卡会员"
        android:textColor="@color/commonThinTextColor" />

    <ImageView
        android:id="@+id/ucenter_black_lock"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:textSize="12sp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="568dp"
        android:src="@drawable/ucenter_lock" />

    <TextView
        android:id="@+id/ucenter_black_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:textSize="12sp"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@id/ucenter_black_lock"
        android:text="黑卡会员"
        android:textColor="@color/commonThinTextColor" />
</RelativeLayout>