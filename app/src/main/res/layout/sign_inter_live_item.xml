<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_root"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/view_weight"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/sign_detail_content"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_thumb"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="32dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/abc_white"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/tv_user_name"
        android:text="name"
        android:layout_toRightOf="@+id/civ_user_thumb"
        android:layout_alignTop="@+id/civ_user_thumb"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:textColor="@color/abc_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_gender"
        android:src="@drawable/femenine"
        android:layout_toRightOf="@+id/civ_user_thumb"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="16dp"
        android:layout_height="16dp"/>

    <TextView
        android:id="@+id/age"
        android:text="28"
        android:layout_toRightOf="@+id/iv_gender"
        android:layout_alignTop="@+id/iv_gender"
        android:layout_alignBottom="@+id/iv_gender"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/mainTagName"
        android:layout_marginLeft="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/iv_type"
        android:src="@drawable/pinzuo_bgm"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/gender"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:layout_width="104dp"
        android:layout_height="61dp"/>
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/civ_user_thumb"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginTop="16dp"
        android:lineSpacingExtra="3dp"
        android:lines="2"
        android:text="我是测试内容,不要忘记删除我是测试内容,不要忘记删除我是测试内容,不要忘记删除我是测试内容,不要忘记删除我是测试内容,不要忘记删除"
        android:textColor="@color/abc_white"
        android:textSize="14sp"/>

    <ImageView
        android:id="@+id/drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/view_weight"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="32dp"
        android:src="@drawable/beerbrew_black"/>

    <TextView
        android:id="@+id/tv_drinks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/drinks"
        android:layout_alignTop="@+id/drinks"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/drinks"
        android:gravity="center_vertical"
        android:text="请你一杯"
        android:textColor="@color/abc_white"
        android:textSize="14sp"/>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tv_drinks"
        android:layout_alignBottom="@+id/tv_drinks"
        android:gravity="center"
        android:layout_marginRight="32dp"
        android:text="刚刚"
        android:textColor="@color/searchClearTagText"
        android:textSize="12sp"/>

</RelativeLayout>