<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header_img"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:focusable="false"
        android:scaleType="centerCrop"
        app:civ_border_color="@color/searchClearTagText"
        app:civ_border_width="1dp" />

    <LinearLayout
        android:id="@+id/base_info_lay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/header_img"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/header_img"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2341"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/sex_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:src="@drawable/femenine" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="12"
            android:textColor="@color/merchant_address" />

    </LinearLayout>

    <TextView
        android:id="@+id/follow_des"
        android:layout_below="@+id/base_info_lay"
        android:layout_marginRight="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/header_img"
        android:textColor="@color/merchant_address" />


    <LinearLayout
        android:id="@+id/focus_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:gravity="center_horizontal|center_vertical"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/focus_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/focus_x"

            />

        <TextView
            android:id="@+id/focus_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/focus_status"
            android:layout_marginTop="10dp"
            android:text="相互关注"
            android:textColor="@color/mainItemPkgBar"
            android:textSize="14sp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainItemDvider"
        android:layout_below="@+id/header_img"
        android:layout_marginTop="16dp"
        />
</RelativeLayout>
