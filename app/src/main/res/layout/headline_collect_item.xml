<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="123dp">

    <ImageView
        android:id="@+id/iv_picture_collect"
        android:layout_width="126dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_toLeftOf="@+id/iv_picture_collect"
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lineSpacingExtra="8dp"
        android:maxLines="2"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:textColor="@color/mainItemTagTitle"
        android:textSize="16sp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_user_thumb"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"/>

    <TextView
        android:id="@+id/tv_user_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_user_thumb"
        android:layout_alignRight="@+id/tv_title"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/iv_user_thumb"
        android:textColor="@color/mainMoreBar"
        android:textSize="14sp"/>

    <View
        android:id="@+id/view_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/bgColor_divier"/>

</RelativeLayout>