<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="73dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_reply_thumb"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>

    <TextView
        android:id="@+id/tv_reply_name"
        android:textSize="14sp"
        android:textColor="@color/regButton"
        android:layout_alignTop="@+id/civ_reply_thumb"
        android:layout_toRightOf="@+id/civ_reply_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_reply"
        android:layout_alignBottom="@+id/civ_reply_thumb"
        android:layout_toRightOf="@+id/civ_reply_thumb"
        android:textColor="@color/mainItemBarDesc"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="16dp"
        android:id="@+id/tv_reply_date"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/civ_reply_thumb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <View

        android:background="@color/divider_list"
        android:layout_below="@+id/civ_reply_thumb"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</RelativeLayout>