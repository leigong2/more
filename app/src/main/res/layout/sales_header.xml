<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_sales_top"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="184dp"
        android:scaleType="centerCrop"
        android:src="@drawable/bannerr2"/>

    <TextView
        android:id="@+id/tv_sales_orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="32dp"
        android:text="橙卡会员"
        android:textColor="@color/abc_white"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/tv_orange_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sales_orange"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/arrow_white"
        android:drawableTint="@color/abc_white"
        android:textColor="@color/abc_white"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/tv_black_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_sales_top"
        android:layout_alignRight="@+id/iv_sales_top"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:drawablePadding="4dp"
        android:drawableRight="@drawable/arrow_white"
        android:textColor="@color/abc_white"
        android:textSize="12dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_black_desc"
        android:layout_alignRight="@+id/iv_sales_top"
        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:text="黑卡会员"
        android:textColor="@color/abc_white"
        android:textSize="21sp"/>

    <TextView
        android:id="@+id/tv_always_add"
        android:layout_below="@+id/iv_sales_top"
        android:text="合作酒吧持续增加中..."
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:background="@color/pkgorder_detail_bg"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="12sp"
        android:textColor="@color/mainTagName"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_list_title"
        android:layout_below="@+id/tv_always_add"
        android:text="Sales"
        android:textColor="@color/abc_black"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/tv_list_detail"
        android:text="限时套餐特惠,聪明的价格"
        android:layout_below="@+id/tv_list_title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/mainTagName"
        android:textSize="12sp"
        android:paddingBottom="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>