<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_drink_top"
        android:layout_marginRight="8dp"
        android:src="@drawable/bg_buyuadrink_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_alignLeft="@id/iv_drink_top"
        android:layout_alignRight="@id/iv_drink_top"
        android:layout_below="@id/iv_drink_top"
        android:gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_height="96dp">

        <TextView
            android:id="@+id/tv_sender"
            android:layout_width="wrap_content"
            android:gravity="center_horizontal"
            android:text="· 请TA一杯 ·"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_drink_src"
            android:src="@drawable/beerbrew_black"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="鸡尾酒"
            android:id="@+id/drink_name"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:background="@drawable/bg_buyuadrink_white"
            android:layout_width="wrap_content"
            android:layout_height="0dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_drink_bottom"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@+id/iv_drink_top"
        android:layout_alignRight="@+id/iv_drink_top"
        android:layout_below="@+id/ll_bg"
        android:src="@drawable/bg_buyuadrink_white"
        android:rotation="180"
        android:layout_height="wrap_content"/>

</RelativeLayout>