<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_comment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/view_weight"
        android:layout_width="wrap_content"
        android:layout_height="56dp"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/view_weight"
        android:id="@+id/civ_user_thumb"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/civ_user_thumb"
        android:layout_alignTop="@+id/civ_user_thumb"
        android:layout_toRightOf="@+id/civ_user_thumb"
        android:gravity="center"
        android:textColor="@color/mainItemTagTitle"
        android:textSize="14sp"/>

    <TextView
        android:id="@+id/tv_send_date"
        android:layout_width="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/civ_user_thumb"
        android:layout_alignParentRight="true"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_alignTop="@+id/civ_user_thumb"
        android:textColor="@color/merchant_item_distance"/>

    <com.moreclub.moreapp.information.ui.view.CenterTextView
        android:textColor="@color/mainItemBarDesc"
        android:layout_below="@+id/civ_user_thumb"
        android:id="@+id/tv_comment"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:textSize="14sp"
        android:lineSpacingExtra="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginRight="16dp"
        android:id="@+id/reply_count"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:layout_below="@+id/tv_comment"
        android:layout_alignParentRight="true"
        android:textColor="@color/regButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>