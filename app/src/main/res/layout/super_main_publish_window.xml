    <ImageView
        android:id="@+id/temp_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/toolbar_bg"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/center_bottom"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/temp_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-13dp"
        android:src="@drawable/main_publish_btn"/>


    /////////////////////////////////////////


    <LinearLayout
        android:id="@+id/publish_seat_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="185dp"
        android:layout_toLeftOf="@+id/center_bottom"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/super_publish_btn"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/publish_seat"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="发约玩"
            android:textColor="@color/orange"
            android:textSize="15dp"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/publish_channel_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="185dp"
        android:layout_toRightOf="@+id/center_bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/super_publish_btn"
            android:gravity="center"
            >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/publish_channel"
                />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:text="发动态"
            android:textColor="@color/orange"
            android:textSize="15dp"/>
    </LinearLayout>


