<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.moreclub.common.ui.view.scrollview.ObservableScrollView
        android:id="@+id/detailsScrollView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/white"
        android:fadingEdge="none"
        android:fadingEdgeLength="0dp"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_header_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/header_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="104dp"
                    android:text="头像"
                    android:textColor="@color/merchant_item_distance"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/header_img"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="72dp"/>
            </LinearLayout>

            <View
                android:id="@+id/devide1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/ll_header_lay"
                android:layout_marginTop="16dp"
                android:background="@color/mainItemDvider"/>

            <LinearLayout
                android:id="@+id/ll_nick_name_lay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">

                <TextView
                    android:id="@+id/nick_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:text="昵称"
                    android:textColor="@color/merchant_item_distance"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/user_nick"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:background="@color/white"
                    android:hint="请输入你的别名"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textColor="@color/mainItemTagTitle"
                    android:textSize="14sp"/>

            </LinearLayout>

            <View
                android:id="@+id/devide2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/sex_layout"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <RelativeLayout
                android:id="@+id/sign_lay"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_sex_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="16dp"
                    android:text="性别"
                    android:textColor="@color/merchant_item_distance"
                    android:textSize="14sp"/>

                <EditText
                    android:id="@+id/user_sex"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="16dp"
                    android:layout_toRightOf="@+id/user_sex_tag"
                    android:background="@color/white"
                    android:hint="请选择"
                    android:paddingRight="16dp"
                    android:singleLine="true"
                    android:textColor="@color/mainItemTagTitle"
                    android:textColorHint="@color/mainTagName"
                    android:textSize="14sp"/>

                <ImageView
                    android:id="@+id/iv_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/arrow_next"
                    android:translationX="-16dp"/>
            </RelativeLayout>


            <View
                android:id="@+id/devide4"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/hometown_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide5"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/birthday_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide6"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/job_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide7"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/hobby_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide8"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/brand_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide9"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/decorum_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide10"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/book_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <include
                android:id="@+id/food_lay"
                layout="@layout/user_modify_layout"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

            <View
                android:id="@+id/devide12"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/mainItemDvider"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"/>

        </LinearLayout>

    </com.moreclub.common.ui.view.scrollview.ObservableScrollView>

    <include
        android:id="@+id/nav_layout"
        layout="@layout/details_navi_bar"/>

    <TextView
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/activity_title"
        android:layout_gravity="end"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:text="保存"
        android:textColor="@color/orange"
        android:textSize="14sp"/>
</FrameLayout>

