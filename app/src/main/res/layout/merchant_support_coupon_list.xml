<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/mainItemDvider"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@color/mainItemBarDesc"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:text="本店支持More礼券"
            />

        <ImageButton
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pagedown"
            android:background="@android:color/transparent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:padding="10dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/no_coupon_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:visibility="gone"
        >

        <ImageView
            android:id="@+id/noncoupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/noncoupon"
            android:layout_marginTop="48dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/mainItemPkgTitle"
            android:layout_marginTop="16dp"
            android:textSize="14sp"
            android:text="暂无可用礼券呐..."
            />

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/support_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginBottom="20dp"
        android:visibility="visible"
        >

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/no_use_coupon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_use_coupon"
            android:textColor="@color/mainItemPkgBar"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_marginBottom="10dp"
            />

    </LinearLayout>


</LinearLayout>
