<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headline_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/abc_white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_type1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_headline_top"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/iv_start_btn"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:src="@drawable/play_list"
            android:visibility="gone"/>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_thumb"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/tv_dec"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/card_logo"/>

        <TextView
            android:id="@+id/tv_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user_thumb"
            android:layout_alignTop="@+id/iv_user_thumb"
            android:layout_below="@+id/tv_dec"
            android:layout_toRightOf="@+id/iv_user_thumb"
            android:gravity="center_vertical"
            android:text="More出品"
            android:textColor="@color/mainItemPkgBar"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/tv_dec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_headline_top"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/mainItemTagTitle"
            android:textSize="16sp"/>

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@+id/iv_user_thumb"
            android:background="@color/mainItemDvider"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_type2"
        android:layout_width="match_parent"
        android:layout_height="129dp">

        <View
            android:id="@+id/view_weight"
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <ImageView
            android:id="@+id/iv_headline_top2"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_toRightOf="@+id/view_weight"
            android:scaleType="fitXY"/>

        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_start_btn2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/play_list"
            android:layout_below="@+id/tv_dec2"
            android:layout_alignRight="@+id/iv_headline_top2"
            android:layout_alignEnd="@+id/iv_headline_top2"
            android:layout_marginRight="70dp"
            android:layout_marginEnd="70dp"/>

        <TextView
            android:id="@+id/tv_dec2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_toLeftOf="@+id/view_weight"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp"
            android:textColor="@color/mainItemTagTitle"
            android:textSize="16sp"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_thumb2"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_below="@+id/tv_dec2"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/card_logo"/>

        <TextView
            android:id="@+id/tv_user2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/iv_user_thumb2"
            android:layout_alignTop="@+id/iv_user_thumb2"
            android:layout_below="@+id/tv_dec2"
            android:layout_toRightOf="@+id/iv_user_thumb2"
            android:gravity="center_vertical"
            android:text="More出品"
            android:textColor="@color/mainItemPkgBar"
            android:textSize="14sp"/>

        <View
            android:id="@+id/view_divider2"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="@color/mainItemDvider"/>

    </RelativeLayout>

</LinearLayout>