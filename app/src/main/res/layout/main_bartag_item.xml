<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/main_bartag_item_height"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_below="@+id/main_bartag_divider"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/main_tag_title"
            android:layout_width="@dimen/main_bartag_title_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:textStyle="bold"
            android:maxLines="2"
            android:textColor="@color/mainItemTagTitle"
            android:textSize="@dimen/main_bizarea_title_text_size" />

        <com.moreclub.common.ui.view.VerticalDashView
            android:layout_width="@dimen/main_bizarea_divider_width"
            android:layout_height="@dimen/main_bizarea_item_height"
            android:layout_gravity="center_vertical" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_bartag_item_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdge="none"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="@dimen/main_bizarea_item_margin_top"
            android:scrollbars="none"></android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_bartag_divider"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_bartag_dvider_height"
        android:background="@color/mainItemDvider" />

</RelativeLayout>