<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_root"
    android:background="@color/abc_white">

    <ImageView
        android:layout_marginTop="4dp"
        android:id="@+id/iv_package_icon_bg"
        android:src="@drawable/default_more"
        android:scaleType="fitCenter"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"/>

    <ImageView
        android:layout_marginTop="4dp"
        android:id="@+id/iv_package_icon"
        android:scaleType="centerCrop"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_marginRight="8dp"/>

    <TextView
        android:id="@+id/package_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_toRightOf="@+id/iv_package_icon"
        android:layout_alignParentTop="true"
        android:ellipsize="end"
        android:lineSpacingExtra="8dp"
        android:maxLines="2"
        android:text="苏格兰五大产区威士忌苏格兰五大产区威士忌苏格兰五大产区威士忌"
        android:textColor="@color/mainItemBarDesc"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/package_title"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/iv_package_icon"
        android:text="Finity Bar  1.2km"
        android:textColor="@color/mainTagName"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_distance"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/iv_package_icon"
        android:text="8元"
        android:textColor="@color/bill_total_price"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/old_price"
        android:textSize="13sp"
        android:padding="1dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_alignTop="@+id/new_price"
        android:layout_alignBottom="@+id/new_price"
        android:layout_toRightOf="@+id/new_price"
        android:text="10元"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@+id/iv_package_icon"
        android:layout_marginBottom="12sp"
        android:layout_marginTop="12sp"
        android:background="@color/btn_white_normal"/>

</RelativeLayout>